generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model User {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  telegramId     String        @unique
  firstName      String?
  username       String?
  photoUrl       String?
  pts            Int           @default(0)
  completedDates String[]      @default([])
  achievements   Achievement[] // отношение
}

model Achievement {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  description String
  requirement String
  status    String
  image     String
  points    Int
  user      User   @relation(fields: [userId], references: [id])
  userId    String @db.ObjectId
}
