generator client {
  provider   = "prisma-client-js"
  output     = "../../node_modules/@prisma/postgres-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GoalStatus {
  not_started
  in_progress
  completed
}

model Goal {
  id             String      @id
  title          String
  points         Int
  status         GoalStatus  @default(not_started)
  progress       Int         @default(0) 
  completionDate DateTime?
  description    String
  userId         String
  startDate      DateTime?
}
